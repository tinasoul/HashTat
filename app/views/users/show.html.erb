<div class="row">
  <div class="large-12 columns">
    <div class="leftside large-6 columns panel">
      <div class="avatarshow">
          <%= image_tag (avatar_url(@user)) %>
      </div>
      <div class="usernametitle">
        <h1><%= "#{@user.username}" %></h1>
        <hr/>
        <%= "#{@user.location}" %>
        <br/>
        <hr/>
        <%= "#{@user.about_me}" %>
        <br/>
        <hr/>
        <% if @user == current_user %>
          <%= link_to "Edit your profile", edit_user_path %>
        <% else %>
        <% end %>
      </div>
    </div>
    <div class="rightside large-offset-1 column large-5 columns">
      <h1>Ink</h1>
      <hr/>
      <% if @user.tattoos.size == 0 %>
        <%= "This user has not added any Ink." %>
      <% else %>
        <% @tattoos.each do |tattoo| %>
          <div class="user_tat large-3 columns">
            <%= show_tattoo_photo_profile(tattoo) %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
