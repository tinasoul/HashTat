<h2>Edit Your Profile</h2>
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <%= f.input :avatar, :as => :file, :label => "Profile Pic" %>
  </div>
   <div class="field">
    <%= f.input :memorable_story, label: "Are you a tattoo artist?", :collection =>[['Yes',:yes],['No',:no]], :as => :radio_buttons %>
  </div>
  <div class="field">
    <%= f.input :location, :placeholder => "Austin, Texas" %>
  </div>
  <div class="field">
    <%= f.input :about_me, :label => "About me", :input_html => {"data-limit" => 45} %>
  </div>
  <!-- .field
  -->
  <!--   = f.input :memorable_story, :label => "Fav. tattoo story"
  -->
  <div class="form_actions">
    <%= f.button :submit, "Submit", class: 'button' %>
  </div>
<% end %>

