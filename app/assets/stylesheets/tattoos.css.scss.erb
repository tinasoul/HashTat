.masonry-brick { 
  width: 380px; 
  margin: 10px;
  //weird gutter to right that needs to be fixed
  float: left; 
  z-index:1; }

#masonryContainer { 
  background-image: url('brickwall.png');
  position:relative;
  top: 500px;
  width: 102%;
  bottom:0;
  scroll:auto;
  left: -15px;
  padding-left: 7%;
} 
.masonry-brick a {
  transition: opacity .2s linear;
}
.masonry-brick a:hover {
  opacity:0.8;
}

.hover-bar {
  bottom: 0;
  right: 0;
  position: absolute;
}

